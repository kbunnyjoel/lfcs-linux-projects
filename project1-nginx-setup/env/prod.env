# Production environment config

# Standard HTTP port
PORT=80

# Root directory for web content
WEBROOT="/opt/homebrew/var/www"

# Public domain name for production
SERVER_NAME="localhost"


# Enable HTTPS? (prod = true)
ENABLE_SSL=true

# SSL certificate paths
SSL_CERT_PATH="/opt/homebrew/etc/nginx/ssl/example.crt"
SSL_KEY_PATH="/opt/homebrew/etc/nginx/ssl/example.key"

# Log directory
LOG_DIR="/var/log/nginx"

# Health check endpoint
HEALTHCHECK_URL="https://localhost/health"

# Marker text for prod pages
MARKER_TEXT="marker:lfcs-project-1-prod"
